<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/exerciseLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Exercise Name"
        android:id="@+id/exerciseName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sets:"
        android:id="@+id/setsLabel"
        android:layout_alignTop="@+id/repetitionsLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10"
        android:id="@+id/exerciseSets"
        android:layout_alignBottom="@+id/setsLabel"
        android:layout_toRightOf="@+id/setsLabel"
        android:layout_toEndOf="@+id/setsLabel"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Repetitions:"
        android:id="@+id/repetitionsLabel"
        android:singleLine="true"
        android:layout_below="@+id/exerciseWeight"
        android:layout_alignLeft="@+id/exerciseWeight"
        android:layout_alignStart="@+id/exerciseWeight"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100"
        android:id="@+id/exerciseRepetitions"
        android:layout_alignTop="@+id/repetitionsLabel"
        android:layout_toRightOf="@+id/repetitionsLabel"
        android:layout_toEndOf="@+id/repetitionsLabel"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weight:"
        android:id="@+id/weightLabel"
        android:layout_below="@+id/exerciseName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="200 lbs"
        android:id="@+id/exerciseWeight"
        android:layout_below="@+id/exerciseName"
        android:layout_toRightOf="@+id/exerciseSets"
        android:layout_toEndOf="@+id/exerciseSets"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp" />

</RelativeLayout>